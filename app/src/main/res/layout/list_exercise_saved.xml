<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_exercise_name"
        style="@style/muli20bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ibtn_delete"
        android:layout_marginRight="16dp"
        android:textColor="@color/primary_ligth"
        android:text="name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/ibtn_delete"
        android:src="@drawable/ic_delete_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_steps"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_exercise_name"
        android:src="@drawable/ic_setp_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_steps"
        style="@style/muli16"
        android:textColor="@color/primary_ligth"
        android:text="10"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_steps"
        app:layout_constraintTop_toTopOf="@id/iv_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_work_out"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_exercise_name"
        android:src="@drawable/ic_play_arrow_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_work_seconds"
        style="@style/muli16"
        android:textColor="@color/primary_ligth"
        android:text="10"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_work_out"
        app:layout_constraintTop_toTopOf="@id/iv_work_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_rest"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tv_exercise_name"
        app:layout_constraintEnd_toStartOf="@id/tv_rest_seconds"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_pause_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_rest_seconds"
        style="@style/muli16"
        android:textColor="@color/primary_ligth"
        android:text="10"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/iv_steps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:background="@color/primary_ligth"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>