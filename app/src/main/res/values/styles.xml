<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="genericButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/catamaran</item>
    </style>

    <style name="muli100bold">
        <item name="android:textSize">100dp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="muli20bold">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="muli16bold">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="muli16">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/muli</item>
    </style>

    <style name="mainButton" parent="genericButton">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:fontFamily">@font/catamaran</item>
    </style>

    <style name="borderButton" parent="genericButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/catamaran</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>